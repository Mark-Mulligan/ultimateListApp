<%- include("../partials/header"); -%> 

<body>
    <div class="page-background">
        <div class="container">
            <div class="input-container">
                <h2>Create a new list</h2>
                <form action="/lists" method="POST">
                    <div class="form-group text-left">
                        <label for="newListName">List Name:</label>
                        <input class="form-control" name="newListName" type="text">
                    </div>
                    <button type="submit" class="btn btn-outline mr-4 mb-3">Create</button>
                    <a href="/lists"><button type="button" class="btn btn-outline mb-3">Go Back</button></a>
                </form>

                <%- include("../partials/errormessage") -%>
            </div>
        </div>
            
    </div>

    <!-- Option 1: jQuery and Bootstrap Bundle (includes Popper) -->
